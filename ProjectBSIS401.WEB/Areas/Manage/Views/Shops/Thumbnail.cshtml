
@{
    Layout = "~/areas/manage/views/shared/_forms.cshtml";
}

<h2>Update Thumbnail</h2>
<a href="~/manage/shops/index" class="btn btn-primary">List shop</a>
<div class="row">
    <div class="col-md-6">
        <form action="~/manage/shop/update-thumbnail" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="hidden" name="ShopId" value="@Model.ShopId" />
                <label for="Thumbnail">Thumbnail:</label><br />
                <img src="~/image/shops/thumbnail/@Model.ShopId/thumbnail.png" style="max-width:150px;max-height:150px;" /></br></br>
                <input type="file" class="form-control" name="thumbnail" />
                @Html.ValidationSummary()
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>
    </div>
</div>
