@model ProjectBSIS401.WEB.Areas.Manage.ViewModels.pricings.EditViewModel
@{
    Layout = "~/areas/manage/views/shared/_forms.cshtml";
}


<form method="post" action="~/manage/pricings/edit">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" name="Title" value="@Model.Title" placeholder="input a title" />
    </div>

    <div class="form-group">
        <label class="form-label">Price</label>
        <input type="text" class="form-control" name="Price"  value="@Model.Price" placeholder="input a price" />
    </div>

    <div class="form-group">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" name="Month" value="@Model.Month" placeholder="input a month" />
    </div>

    <div class="form-group">
        <button type="submit" value="Create" class="btn btn-success">Save</button>
        <a href="~/manage/pricings/index" class="btn btn-danger">Cancel</a>
    </div>
</form>
