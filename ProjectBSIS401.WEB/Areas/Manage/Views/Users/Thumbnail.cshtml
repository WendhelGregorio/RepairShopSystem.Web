@model ProjectBSIS401.WEB.Areas.Manage.ViewModels.user.ThumbnailViewModel
@{
    Layout = "~/areas/manage/views/shared/_forms.cshtml";
}

<h2>Thumbnail</h2>

<text class="text-warning">2mb only for profile pic</text>
<form action="~/manage/users/update-thumbnail" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <input type="hidden" name="UserId" value="@Model.UserId" />
        <label for="Thumbnail">Thumbnail:</label><br />
        @if (Model.User.Thumbnail == true)
        {
            <img src="~/userprofile/users/@Model.UserId/thumbnail.png " id="imgProfile" style="width: 150px; height: 150px" class="img-thumbnail" />

        }
        <img src="~/image/default/DefaultThumbnail.png" id="imgProfile" style="width: 150px; height: 150px" class="img-thumbnail" />

        <input type="file" class="form-control" name="thumbnail" />
        <h6>Upload a different photo...</h6>
        @Html.ValidationSummary()
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>
