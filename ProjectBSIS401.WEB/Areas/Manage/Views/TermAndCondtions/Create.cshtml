<di class="container">
    <div class="row">
        <form action="~/manage/terms-and-conditions/create" method="post">
            <div class="form-group">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger text-center"></div>
            </div>

            <div class="form-group">
                <label class="form-label" for="Title">Title</label>
                <input type="text" placeholder="Title"  name="Title"class="form-control" />
            </div>

            <div class="row">
                <div class="col">
                    <label for="Description" class="control-label ml-5 mr-3  mb-1">Description</label>
                    <textarea type="text" class="form-control" id="description" name="Description" aria-describedby="descriptionHelp" placeholder="Enter desciption"></textarea>

                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Submit" />
                <a href="~/manage/terms-and-conditions/index" class="btn btn-danger">Back</a>
            </div>
        </form>
    </div>
</di>




