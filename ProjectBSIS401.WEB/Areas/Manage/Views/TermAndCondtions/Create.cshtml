    Layout = "~/areas/manage/views/shared/_forms.cshtml";
}

<h2>Create</h2>

<link rel="stylesheet" href="~/richtexteditor/rte_theme_default.css" />

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div class="text-center">
                <h2></h2>
            </div>
        </div>
        <div class="col-lg-2"></div>
