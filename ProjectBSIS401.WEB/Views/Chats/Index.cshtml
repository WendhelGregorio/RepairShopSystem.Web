@model ProjectBSIS401.WEB.ViewModels.chat.IndexViewModel
@{
    ViewData["Title"] = "Index";
}

<br /><br />
<div class="section-title">
    <h2>Chat</h2>
    <p></p>
</div>

<div class="container">
    <div class="row align-items-start">
        <div class="col-lg-4 ">
            <div class="d-flex flex-column p-3 text-white bg-dark" style="width: 280px;">
                <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                    <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
                    <span class="fs-4">Chatbar</span>
                </a>
                <hr>
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item">
                        <a href="#" class="nav-link active" data-bs-toggle="modal" data-bs-target="#createRoomModal">
                            <svg class="bi me-2" width="16" height="16" data-bs-toggle="modal" data-bs-target="#exampleModal"><use xlink:href="#home"></use></svg>
                            Create Room &nbsp;<i class="fas fa-plus"></i>
                        </a>
                    </li>
                    <li>
                        <a href="~/chats/find" class="nav-link text-white">
                            <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>
                            Find
                        </a>
                    </li>
                    <li>
                        <a href="~/chats/private" class="nav-link text-white">
                            <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>
                            My Private
                        </a>
                    </li>


                </ul>
                <hr>
                @*<div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle me-2">
                        <strong>mdo</strong>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                        <li><a class="dropdown-item" href="#">New project...</a></li>
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#">Sign out</a></li>
                    </ul>
                </div>*@
            </div>
        </div>
       

        @if (Model.Chats != null)
        {
            if (Model.Chats.Count > 0)
            {
                <div class="col-lg-8 col-md-6">
                    @foreach (var chats in Model.Chats)
                    {
                        if (chats.Type == ChatType.Room)
                        {
                            <div class="d-inline-flex p-1">
                                <div class="card-header">
                                    <div class="text-center">
                                        <a href="~/chats/join-room/@chats.Id"><h5 class="card-title">@chats.Name</h5></a>
                                    </div>

                                </div>

                            </div>
                        }




                    }
                </div>
            }
        }



    </div>
</div>


<div class="col-lg-4"></div>


<!-- Modal -->
<div class="modal fade" id="createRoomModal" tabindex="-1" aria-labelledby="createRoomModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Room</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" action="~/chats/create-room">
                    <input type="hidden" name="userId" value="@Model.UserId"/>
                    <input type="text" class="form-control" name="name" placeholder="Name" />
                    <br />
                    <button type="submit" class="btn btn-primary btn-sm">Create</button>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<style>
    .image:hover {
        border: 2px solid #3c3535
    }
</style>

