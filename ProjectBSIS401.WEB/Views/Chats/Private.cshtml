@model ProjectBSIS401.WEB.ViewModels.chat.PrivateChatViewModel
@using ProjectBSIS401.WEB.Infrastructures.Domain.Models
@{
    ViewData["Title"] = "Private";
}

<h2 class="mt-5">Private</h2>

@{ 
    var userId = WebIDS.UserId;
}


@if(Model.Chats != null)
{
    if(Model.Chats.Count > 0)
    {
        @foreach(var c in Model.Chats)
        {

            <ul>
                <li>
                    <a href="~/chats/new-chat/@c.Id">
                        @c.Users.FirstOrDefault(x => x.UserId == userId).Chat.Name
                 
                    </a>
                </li>
            </ul>
          
           

        }
    }
}