@model ProjectBSIS401.WEB.ViewModels.shop.ShopShopServicesDetails
@using ProjectBSIS401.WEB.Infrastructures.Domain.Enums
@{
    ViewData["Title"] = "Details";
}

<br /><br /><br />
<div class="section-title">
    <h2>Shop-Services-Details</h2>
    <p></p>
</div>

<div>
    <h4>Shop-Services</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.ShopServices.Service
        </dd>

        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.ShopServices.Description
        </dd>

        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.ShopServices.Price.ToString("F")
        </dd>

        <dt class="col-sm-2">
            Time
        </dt>
        <dd class="col-sm-10">
            @Model.ShopServices.CreatedAt
        </dd>

    </dl>
</div>
<div>
            <a href="~/shop/shop-items/@Model.ShopId" class="btn btn-danger">Back to List</a>
 
</div>