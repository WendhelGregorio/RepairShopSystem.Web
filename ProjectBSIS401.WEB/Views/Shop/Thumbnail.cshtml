@model ProjectBSIS401.WEB.ViewModels.shop.ThumbnailViewModel
@{
    ViewData["Title"] = "Thumbnail";
}

<br /><br /><br />
<div class="section-title">
    <h2>Update Thumbnail</h2>
</div>

<a href="~/shop/my-dashboard" class="btn btn-primary">My Dashboard</a>
<div class="row">
    <div class="col-md-6">
        <form action="~/shop/shop-update-thumbnail" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="hidden" name="ShopId" value="@Model.ShopId" />
                <label for="Thumbnail">Thumbnail:</label><br />
                @if (Model.Shop.Thumbnail == true)
                {
                    <img src="~/image/shops/thumbnail/@Model.ShopId/thumbnail.png" style="max-width:150px;max-height:150px;" alt="Thumbnail" />

                }
                <img src="~/image/default/DefaultThumbnail.png" style="max-width:150px;max-height:150px;" alt="Thumbnail" />
                <input type="file" class="form-control" name="thumbnail" />
                @Html.ValidationSummary()
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>
    </div>
</div>
