@model ProjectBSIS401.WEB.ViewModels.account.ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
}



<br /><br /><br /><br />
<form method="post" action="/account/forgot-password">
    <div class="forgotpasswordcontent">
        <img src="~/myimages/logotransparent.png" />
        <h3>Forgot Password?</h3>
        <div class="form-group">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
        </div>
        <center id="message"></center>
        <input type="email" name="EmailAddress" placeholder="Email Address" />

        <button type="submit" class="btn btn-primary" value="ForgotPassword">Submit</button>



    </div>

</form>

<script src="~/vendor/jquery/jquery.min.js"></script>
<script>

    $("button").click(function () {
        $("#message").html("<p> Pls check your email...</p>");
    });

    
    
       
    
</script>
