@model ProjectBSIS401.WEB.ViewModels.account.ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
}



<div class="m-5">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="">
                <div class="text-center">
                    <img src="~/myimages/logotransparent.png" />
                    <div>
                        <h2>  <i class="fas fa-lock fa-1x"></i> Forgot Your Password?</h2>
                    </div>
                   
                    <p class="text-muted text-center">
                       If you have forgotten your password, please enter your accounts email address below and click the "Reset My Password" button.
                        You will recieve an email that contains a new password code for your account.
                    </p>
                </div>
             
                <div class="form-group">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                </div>
                <form method="post" action="/account/forgot-password">
                    <div class="form-group">
                        <input class="form-control" type="email" id="emailAddress" name="EmailAddress" placeholder="Email Address" />
                    </div>
                    <br />
                    <div class="form-group">   
                        <input type="submit" class="btn btn-primary" value="Reset My Password" />
                    </div>
                </form>
             </div>
        </div>
        <div class="col-3"></div>
    </div>
    
</div>

<br /><br /><br /><br />




<script src="~/vendor/jquery/jquery-3.5.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#submit").attr('disabled', 'disabled');

        $("form").keyup(function () {
            // To Disable Submit Button
            $("#submit").attr('disabled', 'disabled');
            // Validating Fields
            var emailAddress = $("#email_address").val();
            var password = $("#password").val();


            if (!(emailAddress == "" || password == "")) {

                // To Enable Submit Button
                $("#submit").removeAttr('disabled');
                $("#submit").css({
                    "cursor": "pointer",
                    "box-shadow": "1px 0px 6px #333"
                });

            }
        });
        // On Click Of Submit Button
        $("#submit").click(function () {
            $("#submit").css({
                "cursor": "default",
                "box-shadow": "none"
            });

        });
    });

</script>